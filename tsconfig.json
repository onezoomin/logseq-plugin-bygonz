{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "jsx": "react",
    "noImplicitAny": false,
    //"strict": true,
    "noImplicitThis": true //https://v3.vuejs.org/guide/typescript-support.html#recommended-configuration
  },
  "include": ["./src"]
}
